// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String
  password     String
  phone_number Int?
  Project      Project[]
  Profill      Profile?
}

model Project {
  id         String @id @default(uuid())
  title      String
  nameOfCamp String
  projectURL String
  img        String
  userID     String
  user       User   @relation(fields: [userID], references: [id])
}

model Profile {
  id            String  @id @default(uuid())
  aboutMy       String?
  skill         String?
  hobby         String?
  twitterURL    String?
  nameOfpaje    String?
  nameOfpajeURL String?
  userID        String  @unique
  user          User    @relation(fields: [userID], references: [id])
}
