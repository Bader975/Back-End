// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  employeeID   String?
  role         Role     @default(Admin) 
  name         String
  email        String
  password     String
  phone_number String?
  Project      Project[]
  Profill      Profile?
  Idea         Idea[]
}

model Project {
  id          String @id @default(uuid())
  title       String
  nameOfCamp  String
  discription String
  projectURL  String
  img         String
  userID      String
  user        User   @relation(fields: [userID], references: [id])
  camp        Camp   @relation(fields: [nameOfCamp], references: [name])
}

model Profile {
  id            String  @id @default(uuid())
  aboutMy       String?
  img           String?
  skill         String?
  hobby         String?
  twitterURL    String?
  nameOfpaje    String?
  nameOfpajeURL String?
  userID        String  @unique
  user          User    @relation(fields: [userID], references: [id])
}



model Camp {
  id      String    @id @default(uuid())
  name    String    @unique
  date    String
  project Project[]
}

enum Role {
  User
  Admin
  Company
}

model Idea {
  id          String @id @default(uuid())
  title       String
  discription String
  userID      String
  user        User   @relation(fields: [userID], references: [id])
}

